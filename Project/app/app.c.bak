#include "app.h"
#include "main.h"

WORK_MODE Sys_Work_Mode = SYS_POWER_ON;

/*
*********************************************************************************************************
*	函 数 名: app_Hook
*	功能说明: 
*	形    参：无
*	返 回 值: 无
*********************************************************************************************************
*/
void app_Hook(void)
{
  static uint32_t sys_time, time_ms = 0, time_add_up = 0;
	DISABLE_INT();  	/* 关中断 */
	sys_time = Sys_Time;	/* 这个变量在Systick中断中被改写，因此需要关中断进行保护 */
	ENABLE_INT();  		/* 开中断 */
	
	if(time_ms != sys_time)
	{
		time_ms = sys_time;
		if(++time_add_up >= 1000)
		{
				time_add_up = 0;

		}
	}
}

